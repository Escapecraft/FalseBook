<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.escapecraft.falsebook</groupId>
  <artifactId>FalseBookIC</artifactId>
  <version>0.93.1alpha-1.4.7-ec</version>
  <packaging>jar</packaging>
  <name>FalseBookIC</name>
  <url></url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
      <id>bukkit-repo</id>
      <url>http://repo.bukkit.org/content/groups/public</url>
    </repository>
    <repository>
      <id>escapecraft-repo</id>
      <url>http://dev.escapecraft.com/maven</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.5.1-R0.1-hydrox-tulon-1</version>
    </dependency>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>craftbukkit</artifactId>
      <version>1.5.1-R0.1-hydrox-tulon-1</version>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources/ic</directory>
      </resource>
    </resources>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>2.2</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
            <includes>
                <include>plugin.yml</include>
                <include>com/bukkit/gemo/FalseBook/IC/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/ExecutionEvents/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/Listeners/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/commands/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/Plugins/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/ICs/*</include>
                <include>com/bukkit/gemo/FalseBook/IC/ICs/selftriggered/MC0111.class</include>
                <include>com/bukkit/gemo/FalseBook/IC/ICs/selftriggered/MC1110.class</include>
                <include>com/bukkit/gemo/FalseBook/IC/ICs/standard/MC1111.class</include>
            </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
